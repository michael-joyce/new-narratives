<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>State</th>
            <th>Country</th>

        </tr>
    </thead>
    <tbody>
        {% for place in places %}
            <tr>
                <td>
                    <a href="{{ path('place_show', { 'id': place.id }) }}">
                        {{ place.name }}
                    </a>
                </td>
                <td>
                    {{ place.state }}
                </td>
                <td>
                    {{ place.country }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
